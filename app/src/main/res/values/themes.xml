<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TuniJob" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/blue_200</item>
        <item name="colorAccent">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textinput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#296D98</item>
        <item name="boxStrokeWidth">1dp</item>

    </style>

    <style name="appmodalstyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_drawable</item>

    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top</item>
    </style>
    <style name="collapsedTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="expandedTitleStyle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="Theme.TuniJob.Toolbar">
        <item name="android:textColorSecondary">@android:color/primary_text_dark</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Theme.TuniJob.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="searchview" parent="">
        <item name="editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_300</item>
        <item name="android:textSize">18sp</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="bg_entreprise">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">50dp</item>

    </style>

</resources>